                                    <div className="flex gap-1.5"><div className="w-2.5 h-2.5 rounded-full bg-red-500/70" /><div className="w-2.5 h-2.5 rounded-full bg-yellow-500/70" /><div className="w-2.5 h-2.5 rounded-full bg-green-500/70" /></div>
                                    <span className="text-white/40 text-[10px] font-mono ml-2">Product Catalog — RAG Database</span>
                                </div>
                                <div className="p-4 h-52 overflow-hidden">
                                    <div className="flex items-center gap-2 mb-3">
                                        <div className="flex-1 bg-white/5 rounded-lg px-3 py-1.5 text-[9px] text-white/30">ค้นหาสินค้า...</div>
                                        <div className="px-2 py-1.5 rounded-lg bg-blue-600 text-white text-[9px] font-bold">+ เพิ่มสินค้า</div>
                                    </div>
                                    <div className="space-y-1.5">
                                        {[
                                            { sku: "CP-200M", name: "Centrifugal Pump 200M", cat: "Pump", status: "active" },
                                            { sku: "CB-300S", name: "Conveyor Belt 300S", cat: "Belt", status: "active" },
                                            { sku: "EM-150H", name: "Electric Motor 150H", cat: "Motor", status: "active" },
                                            { sku: "HX-400V", name: "Heat Exchanger 400V", cat: "Heat", status: "active" },
                                        ].map((p) => (
